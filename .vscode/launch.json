{
    "configurations": [
        {
            "name": "Debug: Server Planets",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                // "127.0.6.1" and port 5678
                "host": "127.0.6.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/vantage6"
                }
            ],
            // Starts debug server in a task and *waits for you* to control-C
            // the task before debugger attaches.
            "preLaunchTask": "Start debug server",
        },
        {
            "name": "Debug: Node Mars",
